{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "description": "Hệ thống Quản lý nhân viên - Backend (Express + TypeScript + MySQL)",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/bundle.js",
    "build": "webpack --config webpack.config.js --mode production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "fix:passwords": "node scripts/fix-passwords.js",
    "reset:password": "node scripts/reset-one-password.js",
    "db:migrate": "knex migrate:latest --knexfile knexfile.js",
    "db:rollback": "knex migrate:rollback --knexfile knexfile.js",
    "db:reset": "knex migrate:rollback --all --knexfile knexfile.js && knex migrate:latest --knexfile knexfile.js",
    "db:seed": "knex seed:run --knexfile knexfile.js",
    "db:reseed": "npm run db:reset && npm run db:seed"
  },
  "keywords": [
    "express",
    "typescript",
    "mysql",
    "knex",
    "hr-system",
    "backend"
  ],
  "author": "Hệ thống Quản lý Nhân viên",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^9.1.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fastify": "^5.4.0",
    "fastify-cors": "^6.0.3",
    "fastify-env": "^2.1.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/mysql": "^2.15.27",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.3",
    "@types/pdfkit": "^0.17.3",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
